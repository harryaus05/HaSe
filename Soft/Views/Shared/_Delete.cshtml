@{
    Layout = "_Layout";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<h4>@ViewData["Description"]</h4>

<hr />

<dl class="row">
    @RenderBody()
</dl>

<form asp-action="Delete" asp-route-masterController="@ViewBag.MasterController" asp-route-masterId="@ViewBag.MasterId">
    <input type="hidden" asp-for="@ViewData["ItemId"]" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    @if (ViewBag.MasterController is null) {
        <a asp-action="Index">Back to List</a>
    } else {
        <a asp-action="Edit" asp-controller="@ViewBag.MasterController" asp-route-id="@ViewBag.MasterId">Back to List</a>
    }
</form>
