@{
    Layout = "_Layout";
}

<h1>Details</h1>

<h4>@ViewData["Description"]</h4>
<hr />

<dl class="row">
    @RenderBody()
</dl>

<a asp-action="Edit" asp-route-id="@ViewData["ItemId"]" asp-route-masterController="@ViewBag.MasterController" asp-route-masterId="@ViewBag.MasterId">Edit</a>

@if (ViewBag.MasterController is null) {
    <a asp-action="Index">Back to List</a>
} else {
    <a asp-action="Edit" asp-controller="@ViewBag.MasterController" asp-route-id="@ViewBag.MasterId">Back to List</a>
}