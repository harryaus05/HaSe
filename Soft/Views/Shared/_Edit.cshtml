@{
    Layout = "_Layout";
}

<h1>Edit</h1>

<h4>@ViewData["Description"]</h4>
<hr />
<form asp-action="Edit" asp-route-masterController="@ViewBag.MasterController" asp-route-masterId="@ViewBag.MasterId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for=@ViewData["ItemId"] />

    <dl class="row">
        @RenderBody()
    </dl>

    <input type="submit" value="Save" class="btn btn-primary" />

    @if (ViewBag.MasterController is null) {
        <a asp-action="Index">Back to List</a>
    } else {
        <a asp-action="Edit" asp-controller="@ViewBag.MasterController" asp-route-id="@ViewBag.MasterId">Back to List</a>
    }

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
